.container {
  background: #f9f9f9;
}

.cate-item {
  margin-top: 74rpx;
  height: auto;
  overflow: hidden;
}

.cate-item .b {
  width: 750rpx;
  padding: 0 6.25rpx;
  height: auto;
  overflow: hidden;
}

.cate-item .b .item {
  margin-top:10rpx;
  float: left;
  background: #fff;
  width: 750rpx;
  margin-bottom: 6.25rpx;
  padding-bottom: 10rpx;
  height: auto;
  overflow: hidden;
  text-align: left;
}

.cate-item .b .item-b {
  margin-left: 6.25rpx;
}

.cate-item .item .img-user {
  margin-left: 5rpx;
  margin-top: 5rpx;
  width: 80rpx;
  height: 80rpx; 
}

.title-time{
  flex-direction: column;
  display: inline-block;
  margin-left: 14rpx;
  margin-top: 0rpx;
  vertical-align: left;
  padding: 0;
  color: #454545;
}

.user-name{
  display: block;
  font-size: 26rpx;
  margin-bottom: 28rpx;
}

.time{
  display: block;
  font-size: 22rpx;
}

.title{
  margin-top:5rpx;
  margin-right: 15rpx;
  float: right;
  color: #b4282d;
  font-size: 30rpx;
}

.content{
  margin: 2rpx 20rpx;
  border-top: 1px solid #e1e1e1;
}
.content-text{
  display: block;
  font-size: 30rpx;
  line-height: 40rpx;
  margin-bottom: 14rpx;
  color: #333333;
}
.content-multimedia{
  text-align:center;
  margin:0 auto;
  overflow: hidden;
}
/*图片*/
.content-multimedia image{
  width: 400rpx;
  display: inline-block;
  max-width:100%;
  height: 400rpx; 
}
/*右下角添加按钮*/
.add-wrap {
  position:fixed;
  bottom:0;
  display:flex;
  width:100%;
  justify-content:flex-end;
}
.add-wrap image {
  width:30px;
  height:30px;
}
.contact {
  margin: 2rpx 10rpx;
  text-align: left;
  border-top: 1px solid #e1e1e1;
}
.infopcontent{
  text-align: center;
  margin: 3rpx 3rpx;
  border-top: 1px solid #e1e1e1;
}
.infotitle{
  font-size: 34rpx;
  color: #333;
  line-height: 50rpx;
}