.container {
  background: #f9f9f9;
}

.cate-item {
  margin-top: 74rpx;
  height: auto;
  overflow: hidden;
}

.cate-item .b {
  width: 750rpx;
  padding: 0 6.25rpx;
  height: auto;
  overflow: hidden;
}

.cate-item .b .item {
  margin-top:10rpx;
  float: left;
  background: #fff;
  width: 750rpx;
  margin-bottom: 6.25rpx;
  padding-bottom: 10rpx;
  height: auto;
  overflow: hidden;
  text-align: left;
}

.cate-item .b .item-b {
  margin-left: 6.25rpx;
}

.cate-item .item .img-user {
  margin-left: 5rpx;
  margin-top: 5rpx;
  width: 80rpx;
  height: 80rpx; 
}

.title-time{
  flex-direction: column;
  display: inline-block;
  margin-left: 14rpx;
  margin-top: 0rpx;
  vertical-align: left;
  padding: 0;
  color: #454545;
}

.user-name{
  display: block;
  font-size: 26rpx;
  margin-bottom: 28rpx;
}

.time{
  display: block;
  font-size: 22rpx;
}

.title{
  margin-top:5rpx;
  margin-right: 15rpx;
  float: right;
  color: #b4282d;
  font-size: 30rpx;
}

.pcontent{
  margin: 2rpx 20rpx;
  border-top: 1px solid #e1e1e1;
}
.content-text{
  display: block;
  font-size: 30rpx;
  line-height: 40rpx;
  margin-bottom: 14rpx;
  color: #333333;
}
.infopcontent{
  text-align: center;
  margin: 3rpx 3rpx;
  border-top: 1px solid #e1e1e1;
}
.infotitle{
  font-size: 34rpx;
  color: #333;
  line-height: 50rpx;
}
.content-multimedia{
  text-align:center;
  margin:0 auto;
  overflow: hidden;
}
/*图片*/
.content-multimedia image{
  width: 400rpx;
  display: inline-block;
  max-width:100%;
  height: 400rpx; 
}

.contact {
  margin: 2 2;
  text-align: left;
  border-top: 1px solid #e1e1e1;
}

/*评论样式*/
.comments {
  width: 100%;
  height: auto;
  padding-left: 30rpx;
  background: #fff;
  margin: 20rpx 0;
}

.comments .h {
  height: 102.5rpx;
  line-height: 100.5rpx;
  width: 718.75rpx;
  padding-right: 16rpx;
  border-bottom: 1px solid #d9d9d9;
}

.comments .h .t {
  display: block;
  float: left;
  width: 50%;
  font-size: 38.5rpx;
  color: #333;
}


.comments .b {
  height: auto;
  width: 720rpx;
  margin-bottom: 80rpx;
}

.comments .item {
  height: auto;
  width: 720rpx;
  overflow: hidden;
}

.comments .info {
  height: 127rpx;
  width: 100%;
  padding: 33rpx 0 27rpx 0;
}

.comments .user {
  float: left;
  width: auto;
  height: 67rpx;
  line-height: 67rpx;
  font-size: 0;
}

.comments .user image {
  float: left;
  width: 67rpx;
  height: 67rpx;
  margin-right: 17rpx;
  border-radius: 50%;
}

.comments .user text {
  display: inline-block;
  width: auto;
  height: 66rpx;
  overflow: hidden;
  font-size: 29rpx;
  line-height: 66rpx;
}

.comments .time {
  display: block;
  float: right;
  width: auto;
  height: 67rpx;
  line-height: 67rpx;
  color: #7f7f7f;
  font-size: 25rpx;
  margin-right: 30rpx;
}

.comments .content {
  width: 720rpx;
  padding-right: 30rpx;
  line-height: 45.8rpx;
  font-size: 29rpx;
  margin-bottom: 10rpx;
}

.comments .imgs {
  width: 720rpx;
  height: auto;
  margin-bottom: 25rpx;
}

.comments .imgs .img {
  height: 150rpx;
  width: 150rpx;
  margin-right: 28rpx;
}

.comments .spec {
  width: 720rpx;
  padding-right: 30rpx;
  line-height: 30rpx;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.sendInfo {
  position: fixed;
  left: 0;
  bottom: 0;
  height: 80rpx;
  width: 100%;
  display: flex;
}

.sendInfo .l {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  font-size: 33rpx;
  padding-left: 31.25rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.2);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.2);
}

.sendInfo .r {
  width: 233rpx;
  height: 80rpx;
  background: #21ad57;
  border: 1px solid #21ad57;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
}